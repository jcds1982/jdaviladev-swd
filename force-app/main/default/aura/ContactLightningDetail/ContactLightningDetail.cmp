<aura:component controller="ContactLightning_Controller" implements="force:appHostable,flexipage:availableForAllPageTypes" >
	
	<aura:attribute name="Contact" type="Contact" />
	<aura:attribute name="ContactId" type="string" />
	<aura:handler name="init" value="{!this}" action="{!c.doInit}" />
	<aura:handler event="c:SearchContact" action="{!c.writeMessage}" />


	<div>
		<h1>Contact Detail</h1>
	</div>
    <br/>

	Name: <ui:outputText value="{!v.Contact.FirstName}" />
	&nbsp;
	<ui:outputText value="{!v.Contact.LastName}" />
	<br/>
	Phone: <ui:outputText value="{!v.Contact.Phone}" />
	

</aura:component>